<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jadenball.villagesim.MainMenu"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:textSize="40sp"
        android:text="VillageSim"
        android:id="@+id/textView"
        android:textColor="#a52a2a" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="@string/start_btn"
        android:id="@+id/btnStartGame"
        android:background="#9d4747"
        android:onClick="startTheGame"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="@string/highscore_btn"
        android:id="@+id/btnHighScore"
        android:background="#9d4747" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="@string/about_btn"
        android:id="@+id/btnAbout"
        android:background="#9d4747" />

    <!--
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="Options"
        android:id="@+id/btnOptions"
        android:background="#9d4747" />
    -->

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/exit_btn"
        android:id="@+id/btnExitGame"
        android:background="#9d4747"
        android:onClick="exitTheGame"/>
</LinearLayout>
