<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imgVillage"
        android:background="@drawable/plusicon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imgResource1"
        android:background="@drawable/dot"
        android:layout_alignTop="@+id/imgResource2"
        android:layout_toLeftOf="@+id/imgVillage"
        android:layout_toStartOf="@+id/imgVillage" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imgResource2"
        android:background="@drawable/dot"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgVillage"
        android:layout_toEndOf="@+id/imgVillage" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imgResource3"
        android:background="@drawable/dot"
        android:layout_alignTop="@+id/imgVillage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imgResource4"
        android:background="@drawable/dot"
        android:layout_alignBottom="@+id/imgResource3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day "
            android:id="@+id/txtViewDay"
            android:textSize="40sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txtViewDayNumber"
            android:textSize="40sp"
            />

    </LinearLayout>
</RelativeLayout>